pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/AssianAk/sample-Html.git'
            }
        }

        stage('Deploy to Apache') {
            steps {
                sh '''
                cp index.html /var/www/html/index.html
                '''
            }
        }
    }

    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Deployment failed!"
        }
    }
}
